<% layout('layouts/boilerplate') -%>
<h1 class="mt-3 mb-3">All Students</h1>
<div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1">
       <% for(student of students){ %>

        
        <div class = "card col mt-3">
            <div class="card-header">
               <b style="font-size: 1.5rem;"> <%= student.name %></b>
            </div>
            <ul class="list-group list-group-flush">
              <li class="list-group-item"><b>Roll Number</b> :  <%= student.rollNo  %></li>
              <li class="list-group-item"><b>Phone Number</b> : <%= student.phoneNo  %></li>
              <li class="list-group-item"><b>Father Name</b> : <%= student.fathersName  %></li>
              <li class="list-group-item"><a href="/home/<%= student._id  %>"><button class="btn-sm btn btn-danger">View Detail</button></a></li>
            </ul>
          </div>

        <% } %>
        
 
</div>