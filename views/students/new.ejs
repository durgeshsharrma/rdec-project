<% layout('layouts/boilerplate') -%>


<div class="row offset-2">
    <div class="col col-8">
        <h1>Add Student</h1>
        <form action="/home" method="post" novalidate class="needs-validation">

            <div class="mt-3">
                   <label for="name" class="form-label">Name</label>
                   <input type="text" id="name"  name="student[name]" class = "form-control" required>
            </div>
            <div class="mt-3">
                <label for="rollNo" class="form-label">Roll Number</label>
                <input type="number" id="rollNo" name = "student[rollNo]"  class = "form-control" required>
         </div>
         <div class="mt-3">
            <label for="" class="form-label">Phone number</label>
            <input type="number" name = "student[phoneNo]"  class = "form-control" required>
     </div>
     <div class="mt-3 mb-3">
        <label for="fatherName" class="form-label">Fathers Name</label>
        <input type="text" id="fatherName" name = "student[fathersName]" class = "form-control" required>
 </div>
 <button class="btn col-2 btn-danger">Add</button>

        </form>
    </div>
</div>